<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.julianolden.reisekostenrechner.reisekostenrechner">

    <application android:allowBackup="true"
                 android:label="@string/app_name"
                 android:icon="@mipmap/ic_launcher"
                 android:supportsRtl="true"
                 android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".AddTripActivity"
            android:label="@string/titleActivityAddTrip"> //Titel der Activity wird geändert zu string (einsehbar unter res>values>strings)
        </activity>

        <activity android:name=".TripMenueActivity">
        </activity>

        <activity android:name=".AddExpenseActivity"
            android:label="@string/titleActivityAddExpense"> //Titel der Activity wird geändert zu string (einsehbar unter res>values>strings
        </activity>

    </application>

</manifest>
